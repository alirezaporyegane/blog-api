{
  "build": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "src": "/(.+)",
      "dest": "public/$1"
    }
  ],
  "buildCommand": "npm run build",
  "devCommand": "npm run start"
}